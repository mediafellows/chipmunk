{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "declaration": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strictNullChecks": false,
    "outDir": "dist",
    "lib": ["es6", "es7", "dom"],
    "esModuleInterop": true,
  },
  "compilerOptsRef": {
    "baseUrl": "src",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["dist", "node_modules"]
}
